{
	"compilerOptions": {
		"module": "esnext",
		"lib": ["esnext"],
		"importHelpers": true,
		"declaration": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true,
		"allowJs": true,
		"target": "es5",
		"outDir": "./dist/types"
	},
	"exclude": ["node_modules", "**/dist/**"],
	"include": ["src/**/*"]
}
