{
  "compilerOptions": {
	"moduleResolution": "node",
	"target": "es2018",
	"module": "esnext",
	"lib": [
	  "esnext",
	  "dom"
	],
	"importHelpers": true,
	"removeComments": true,
	"declaration": true,
	"declarationMap": true,
	"outDir": "dist",
	"strict": true,
	"esModuleInterop": true,
	"sourceMap": true,
	"skipLibCheck": true,
	"jsx": "react"
  },
  "include": [
	"src/**/*",
	"react/**/*"
  ],
  "exclude": [
	"node_modules",
	"dist"
  ]
}
