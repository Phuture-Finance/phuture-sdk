{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "test"],
	"exclude": ["node_modules", "dist"]
}
