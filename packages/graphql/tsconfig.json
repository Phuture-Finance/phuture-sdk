{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "es5",
    "skipLibCheck": true,
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "declaration": false,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "**/*.test.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
