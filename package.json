		"next": "12.2.3",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-is": "18.2.0",
		"regenerator-runtime": "0.13.7",
		"styled-components": "5.3.5",
		"tslib": "^2.3.0",
		"wagmi": "^0.6.0"
	}
}
