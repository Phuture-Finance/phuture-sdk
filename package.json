{
  "name": "@phuture/sdk",
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm run build",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "docs": "typedoc --out docs --entryPointStrategy packages ."
  },
  "devDependencies": {
    "turbo": "1.2.15",
    "typedoc": "0.22.17"
  }
}
