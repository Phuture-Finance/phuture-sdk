{
	"name": "phuture",
	"private": true,
	"repository": "Phuture-Finance/phuture-sdk",
	"workspaces": [
		"core",
		"packages/*",
		"examples/*"
	],
	"scripts": {
		"bump": "changeset version && pnpm update-manifests",
		"release": "pnpm publish --access=public",
		"prepare": "husky install",
		"start": "nx exec",
		"build": "nx run-many --target=build --all",
		"format": "prettier --write '**/*.{json,md,yml}'",
		"lint": "nx run-many --target=lint --all",
		"test": "nx run-many --target=test --all",
		"docs": "ts-node -P tools/tsconfig.tools.json ./tools/docs/docs.ts"
	},
	"devDependencies": {
		"@changesets/cli": "^2.24.0",
		"@graphql-codegen/cli": "2.7.0",
		"@graphql-codegen/typescript": "2.7.2",
		"@graphql-codegen/typescript-apollo-client-helpers": "2.2.2",
		"@graphql-codegen/typescript-operations": "2.5.2",
		"@nrwl/cli": "14.4.3",
		"@nrwl/cypress": "14.5.1",
		"@nrwl/devkit": "^14.5.1",
		"@nrwl/eslint-plugin-nx": "14.4.3",
		"@nrwl/jest": "14.4.3",
		"@nrwl/linter": "14.4.3",
		"@nrwl/next": "14.5.1",
		"@nrwl/node": "14.4.3",
		"@nrwl/react": "14.5.1",
		"@nrwl/web": "14.5.1",
		"@nrwl/workspace": "14.4.3",
		"@testing-library/react": "13.3.0",
		"@typechain/ethers-v5": "^10.1.0",
		"@types/chai": "^4.3.1",
		"@types/debug": "^4.1.7",
		"@types/jest": "27.4.1",
		"@types/node": "16.11.7",
		"@types/react": "18.0.15",
		"@types/react-dom": "18.0.6",
		"@types/react-is": "17.0.3",
		"@types/styled-components": "5.1.25",
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"@typescript-eslint/parser": "^5.29.0",
		"axios-mock-adapter": "^1.21.1",
		"babel-jest": "27.5.1",
		"babel-plugin-styled-components": "1.10.7",
		"cai": "^1.0.2",
		"chai": "^4.3.6",
		"eslint": "^8.15.0",
		"eslint-config-next": "12.2.3",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-cypress": "^2.10.3",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jsx-a11y": "6.6.1",
		"eslint-plugin-react": "7.30.1",
		"eslint-plugin-react-hooks": "4.6.0",
		"fs-extra": "^10.1.0",
		"husky": "8.0.1",
		"jest": "27.5.1",
		"jest-mock-extended": "^2.0.7",
		"lint-staged": "13.0.3",
		"moq.ts": "^9.0.2",
		"nx": "14.4.3",
		"prettier": "2.7.1",
		"react-test-renderer": "18.2.0",
		"ts-jest": "27.1.4",
		"ts-node": "~10.8.0",
		"turbo": "1.3.3",
		"typechain": "^8.1.0",
		"typedoc": "0.23.8",
		"typedoc-plugin-markdown": "3.11.6",
		"typescript": "~4.7.2"
	},
	"engines": {
		"node": ">=14.0.0",
		"pnpm": "7"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"pnpm lint --fix",
			"git add"
		],
		"*.{md,json,yml}": [
			"pnpm format",
			"git add"
		]
	},
	"packageManager": "pnpm@7.1.0",
	"dependencies": {
		"@apollo/client": "^3.6.9",
		"@ethersproject/abi": "^5.6.4",
		"@ethersproject/providers": "^5.6.8",
		"@nrwl/next": "14.5.1",
		"axios": "^0.27.2",
		"chalk": "^5.0.1",
		"commander": "^9.4.0",
		"core-js": "^3.6.5",
		"cross-fetch": "^3.1.5",
		"debug": "^4.3.4",
		"dotenv": "^16.0.1",
		"eth-permit": "^0.2.1",
		"ethereumjs-util": "^7.1.5",
		"ethers": "5.6.9",
		"events": "3.3.0",
