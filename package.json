{
  "name": "@phuture/sdk",
  "private": false,
  "repository": "Phuture-Finance/phuture-sdk",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/sdk.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm typechain && npm run build",
    "prepare": "husky install && npm run build",
    "fix": "npx @biomejs/biome check --write src",
    "postinstall": "npm run build",
    "typechain": "typechain --target=ethers-v5 --out-dir=src/typechain 'src/abis/**/*.json' --always-generate-overloads",
    "types": "tsc --noEmit"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@ethersproject/providers": "5.7.2",
    "@typechain/ethers-v5": "10.1.1",
    "@types/node": "16.11.7",
    "husky": "8.0.3",
    "tslib": "2.4.1",
    "typechain": "8.1.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "5.7.0",
    "axios": "1.2.1",
    "axios-retry": "3.3.1",
    "ethers": "5.7.2"
  }
}
