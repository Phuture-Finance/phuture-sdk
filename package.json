{
	"name": "phuture",
	"private": true,
	"repository": "Phuture-Finance/phuture-sdk",
	"workspaces": [
		"core",
		"packages/*"
	],
	"scripts": {
		"bump": "changeset version && pnpm update-manifests",
		"changeset": "changeset",
		"release": "pnpm publish --access=public",
		"prepare": "husky install",
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"format": "prettier --write '**/*.{json,md,yml}'",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"test": "turbo run test --parallel",
		"docs": "typedoc ."
	},
	"devDependencies": {
		"@changesets/cli": "^2.24.0",
		"husky": "8.0.1",
		"lint-staged": "13.0.3",
		"prettier": "2.7.1",
		"turbo": "1.3.3",
		"typedoc": "0.23.8",
		"xo": "0.51.0"
	},
	"engines": {
		"node": ">=14.0.0",
		"pnpm": "7"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"pnpm lint:fix",
			"git add"
		],
		"*.{md,json,yml}": [
			"pnpm format",
			"git add"
		]
	},
	"packageManager": "pnpm@7.1.0",
	"xo": {
		"prettier": true,
		"envs": [
			"browser",
			"node",
			"es2021"
		],
		"rules": {
			"import/extensions": 0,
			"unicorn/prefer-node-protocol": 0
		},
		"ignores": [
			"./examples/**/*.d.ts",
			"./packages/**/test/**",
			"**/generated/**"
		]
	}
}
